#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/python" ]; then
  "$basedir/python"  "$basedir/../git-format-staged/git-format-staged" "$@"
  ret=$?
else 
  python  "$basedir/../git-format-staged/git-format-staged" "$@"
  ret=$?
fi
exit $ret
